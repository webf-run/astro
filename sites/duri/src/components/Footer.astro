---
import {
  FacebookIcon,
  InstagramIcon,
  TwitterIcon,
  YoutubeIcon
} from "@lucide/astro";

interface Props {
  companyTitle?: string;
  companyLogo?: string;
  footerCopyright: string;
  footerLinks: Array<{ link: string; linkText: string }>;
  socials: {
    facebook?: string;
    instagram?: string;
    twitter?: string;
    youtube?: string;
  };
}

const { companyTitle, companyLogo, footerLinks, footerCopyright, socials } =
  Astro.props;
---

<style>
  .footer {
    color: var(--text-color);
    background-color: var(--bg-color);
    filter: invert(5%);
  }

  .footer-container {
    width: 100%;
    max-width: 1320px;

    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .footer-logo {
    padding-top: 2rem;
  }

  .footer-logo-text {
    margin: 0;

    font-size: 4rem;
  }

  .footer-links a {
    font-size: larger;

    text-decoration: none;
    color: var(--text-color);
    
    cursor: pointer;
  }

  .socials {
    width: 25%;

    display: flex;
    justify-content: space-between;
  }
</style>
<section class="footer" style="display: flex; justify-content: center;">
  <div class="footer-container">
    <div class="footer-logo">
      {companyLogo && <img src={companyLogo} alt="logo" />}
      {companyTitle && <h1 class="footer-logo-text">{companyTitle}</h1>}
    </div>
    <div class="footer-links" style="display: flex; gap: 1rem;">
      {footerLinks.map((val) => <a href={val.link}>{val.linkText}</a>)}
    </div>
    <div class="socials">
      {
        socials.facebook && (
          <div>
            <FacebookIcon href={socials.facebook} />
          </div>
        )
      }
      {
        socials.twitter && (
          <div>
            <TwitterIcon href={socials.twitter} />
          </div>
        )
      }
      {
        socials.youtube && (
          <div>
            <YoutubeIcon href={socials.youtube} />
          </div>
        )
      }
      {
        socials.instagram && (
          <div>
            <InstagramIcon href={socials.instagram} />
          </div>
        )
      }
    </div>
    <div class="copyright">
      @{footerCopyright}
    </div>
  </div>
</section>
